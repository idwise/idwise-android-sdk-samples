<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IDWiseNFCDynamicJourney" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="base_text" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="sample_title" parent="base_text">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sample_title_header_dialog" parent="sample_title">
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="sample_details" parent="base_text">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/detail</item>
    </style>

    <style name="sample_button">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHeight_max">@dimen/_53sdp</item>
        <item name="layout_constraintHeight_min">@dimen/_40sdp</item>
        <item name="layout_constraintHeight_percent">0.085</item>
        <item name="layout_constraintWidth_percent">0.876</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="selectableItemBackground">?android:attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="strokeColor">@color/button_color</item>
        <item name="backgroundTint">@color/button_color</item>
    </style>

</resources>